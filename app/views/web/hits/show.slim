section.section-padded
  .container
    .row
      .col-md-4.col-md-push-8.col-lg-3.col-lg-push-9
        .panel.panel-muted
          .panel-body
            - if current_user&.admin?
              p = link_to 'Открыть в админке', [:admin, hit],
                          class: 'btn btn-default btn-block'
            p.text-right = human_datetime(hit.happened_at)
            = render 'share2', image: hit.cover
      .col-md-8.col-md-pull-4.col-lg-9.col-lg-pull-3
        h1 = hit.title
        .rich-text = hit.body.html_safe
